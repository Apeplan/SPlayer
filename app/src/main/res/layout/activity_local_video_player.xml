<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.apeplan.splayer.LocalVideoPlayerActivity">

    <io.vov.vitamio.widget.VideoView
        android:id="@+id/vov_videoView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <RelativeLayout
        android:id="@+id/frl_operation"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/mediacontroller_bg"
        android:padding="10dp"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imv_volume_bg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/player_gesture_sound_big"/>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imv_volume_bg"
            android:layout_marginTop="10dp"
            android:progress="50"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>

</FrameLayout>
